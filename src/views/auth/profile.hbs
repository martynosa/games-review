<main>
    <div class="container text-white">
        <h1 class="display-1 text-center mb-5">{{user.username}}'s profile</h1>
        <div class="d-flex align-items-center border-0">
            <div class="toast-body">
                Liked games
            </div>
        </div>
        {{#if likedGames}}
        <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
            {{#each likedGames}}
            <div class="col">
                <div class="card" style="background-color: #212529;">
                    <div class="card-header">{{title}}</div>
                    <img src={{imageUrl}} class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text"><small class="text-muted">Ganre: {{ganre}}</small></p>
                        <p class="card-text"><small class="text-muted">Release year: {{releaseYear}}</small></p>
                        <p class="card-text">üëç {{rating}}</p>
                    </div>
                    <a href="/game/{{_id}}" class="btn btn-primary">Details</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <h3 class="text-center text-muted mb-5">Nothing to show...</h3>
        {{/if}}
        <div class="d-flex align-items-center border-0">
            <div class="toast-body">
                Created games
            </div>
        </div>
        {{#if createdGames}}
        <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
            {{#each createdGames}}
            <div class="col">
                <div class="card" style="background-color: #212529;">
                    <div class="card-header">{{title}}</div>
                    <img src={{imageUrl}} class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text"><small class="text-muted">Ganre: {{ganre}}</small></p>
                        <p class="card-text"><small class="text-muted">Release year: {{releaseYear}}</small></p>
                        <p class="card-text">üëç {{rating}}</p>
                    </div>
                    <a href="/game/{{_id}}" class="btn btn-primary">Details</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <h3 class="text-center text-muted mb-5">Nothing to show...</h3>
        {{/if}}
    </div>
</main>